# See dunst(5) for references.

[global]
## Window Property
class = "Dunst"
title = "Dunst"

width = 300
height = 300

frame_width = 0

padding = 16
horizontal_padding = 16

## Icon
icon_theme = "Papirus-Dark"
enable_recursive_icon_lookup = true

icon_position = "left"
icon_corner_radius = 8

min_icon_size = 32
max_icon_size = 64

text_icon_padding = 24

## Text
font = "Monospace 12"

markup = "full"

format = "<b>%s</b>\n%b"

alignment = "left"
vertical_alignment = "center"

## Mouse
mouse_left_click = "do_action, open_url"
mouse_middle_click = "context_all, close_all"
mouse_right_click = "close_current"

## Colors
[urgency_normal]
background = "#24283B"
foreground = "#C0CAF5"
