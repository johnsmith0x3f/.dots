#!/bin/sh

getvol() {
	pamixer --get-volume
}

setvol() {
	pamixer --set-volume $1
}

status() {
	pamixer --get-mute
}

toggle() {
	pamixer --toggle-mute

	# Update eww.
	if [[ $(eww get volume-mute) == "false" ]]; then
		eww update volume-mute="true"
	else
		eww update volume-mute="false"
	fi
}

case "$1" in
	"--get-volume") getvol;;
	"--set-volume") setvol $2;;

	"--status-mute") status;;
	"--toggle-mute") toggle;;
esac
