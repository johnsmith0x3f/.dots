(defwindow example :monitor 0
                   :geometry (geometry :x "0%"
                                       :y "20px"
                                       :width "90%"
                                       :height "30px"
                                       :anchor "top center")
                   :stacking "fg"
                   :windowtype "dock"
                   :wm-ignore "false"
  (greeter :text "Say hello!"
           :name "John"))

(defwidget greeter [name]
  (box :orientation "h"
       :halign "center"
    date
    (button :onclick "notify-send 'Hello' 'Hello, ${name}'"
      "Greet")))

(defvar foo "initial value")

(defpoll date :interval "1s"
  `date +%y-%m-%d`)

(defpoll time :interval "1s"
  `date +%H:%M:%S`)
