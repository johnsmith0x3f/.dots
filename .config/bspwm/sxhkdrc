### https://github.com/johnsmith0x3f/.dots ###



# Quit/Restart bspwm.
super + alt + {e,r}
	bspc {quit,wm -r}

# Reload sxhkd configurations.
super + Escape
	pkill -USR1 -x sxhkd

# Run default terminal (wezterm).
super + Return
	wezterm

# Launch applications.
super + space
	dmenu_run -b

# Close/Kill a window.
super + {x,X}
	bspc node -{c,k}

# Alternate between the tiled and monocle layout.
super + m
	bspc desktop -l next

#
# state/flags
#

# Toggle pseudo_tiled/floating/fullscreen.
super + {t,f,g}
	bspc node -t {"~pseudo_tiled","~floating", "~fullscreen"}

#
# focus/swap
#

# Focus/Shift the node in the given direction.
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}
# Focus the next window in the current desktop.
super + {c,C}
	bspc node -f {next,prev}.local.!hidden.window

# Focus the given desktop or send focused node to it.
super + {1-9}
	bspc desktop -f "^{1-9}"
super + shift + {1-9}
	bspc node -d "^{1-9}"

#
# move/resize
#

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Resize/Rotate Mode
super + r : {h,j,k,l}
	bsp-resize {x -,y +,y -,x +} 20
super + r : {q,e}
	bspc node @/ --rotate {-90,90}

# Take screenshot with maim.
super + shift + s
	maim --geometry "$(xrandr -q | grep "primary" | cut -d " " -f 4)" --hidecursor "${HOME}/Pictures/Screenshots/$(date +%F-%H%M%S).png"

# Control media with pactl and playerctl.
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%
XF86Audio{Prev,Next,Play}
	playerctl {previous,next,play-pause}


# Right-Click Menu
~button3
	xqp 0 $(xdo id -N Bspwm -n root) && jgmenu --config-file="${BSPDIR}/jgmenurc" --csv-file="${BSPDIR}/jgmenu.csv"
