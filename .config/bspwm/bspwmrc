#!/usr/bin/env bash

# Set environment variables.
export BSPDIR="${XDG_CONFIG_HOME:-$HOME/.config}/bspwm"
export PATH="${BSPDIR}/scripts:${PATH}"

# Set monitor numbers & names.
bspc monitor -d 1 2 3 4 5 6 7 8 9

bspc config split_ratio         0.50
bspc config borderless_monocle  true
bspc config gapless_monocle     false

# Size of the gap that separates windows.
bspc config window_gap          10

# Window border width.
bspc config border_width        0

bspc config top_padding         60

# Rules.
# bspc rule -a Rofi state="floating"
bspc rule -a lxappearance state="floating"
bspc rule -a "mpv" desktop="^8" state="floating"
bspc rule -a "steam" desktop="^9" state="floating"

# Map keys with sxhkd.
pgrep -x sxhkd || sxhkd -c "${BSPDIR}/sxhkdrc" &

# Composite X windows with picom.
pgrep -x picom || picom --config "${BSPDIR}/picom.conf" &

# Render wallpaper with feh.
feh --bg-fill --no-fehbg "${BSPDIR}/themes/tokyonight/arch.png"

# Render taskbar with polybar.
bash "${XDG_CONFIG_HOME:-$HOME/.config}/polybar/themes/tokyonight/launch.sh"

# Host firefox homepage with http-server.
http-server "${XDG_CONFIG_HOME:-$HOME/.config}/firefox/homepages/Chevron"
