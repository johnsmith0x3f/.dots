/*
	The   world is made up with boxes.
	The   properties of boxes, if exist, should be listed from the outside to the inside.
*/

// Global   properties.
* {
	// Foreground   colors.
	foreground:         #F9F7F7;
	foreground-alt:     #DBE2EF;

	// Background   colors.
//    background:         #112D4E;
//    background-alt:     #3F72AF;
	background:         #1E2127FF;
	background-alt:     #282B31FF;

	selected:           #61AFEFFF;
}

window {
	enabled:                  true;
	location:                 center;
	anchor:                   center;
	fullscreen:               false;
	width:                    600px;
	x-offset:                 0px;
	y-offset:                 0px;
	padding:                  0px;
	margin:                   0px;
	border:                   0px;
	border-radius:            0px;
	transparency:           "real";
	background-color:         @background;
	font:                   "OperatorMono Nerd Font Mono   15";
}

mainbox {
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	padding:                  30px;

	text-color:               @foreground;
	background-color:         transparent;

	children:                 [ "inputbar", "message", "listview" ];
}

inputbar {
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	padding:                  0px;

	text-color:               inherit;
	background-color:         inherit;

	spacing:                  10px;

	children:                 [ "textbox-prompt-icon", "entry", "mode-switcher" ];
}

prompt {
	enabled:                  false;

	text-color:               inherit;
	background-color:         inherit;
}

textbox-prompt-icon {
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	padding:                  5px 0px;

	expand:                   false;

	content:                "ï€‚";
	text-color:               inherit;
	background-color:         inherit;
}

entry {
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	padding:                  5px 0px;

	text-color:               inherit;
	background-color:         inherit;

	placeholder:              "Search...";
	placeholder-color:        @foreground-alt;
}

mode-switcher{
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	padding:                  0px;

	text-color:               @foreground;
	background-color:         transparent;

	spacing:                  10px;
}

button {
	enabled:                  true;

	border:                   0px;
	border-radius:            10px;
	padding:                  5px 12px;

	text-color:               inherit;
	background-color:         inherit;

	cursor:                   pointer;
}

button.selected {
	text-color:               @background;
	background-color:         @selected;
}

listview {
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	padding:                  0px;

	text-color:               @foreground;
	background-color:         transparent;

	scrollbar:                true;

	layout:                   vertical;
	spacing:                  5px;
	lines:                    8;

	cursor:                   default;
}

scrollbar {
	enabled:                  true;

	handle-width:             5px;
	handle-color:             @background-alt;
}

element {
	enabled:                  true;

	margin:                   0px;
	border:                   0px;
	border-radius:            10px;
	padding:                  5px 10px;

	spacing:                  10px;

	cursor:                   pointer;
}
element.normal {
	text-color:               @foreground;
	background-color:         @background;
}
element.selected {
	text-color:               @background;
	background-color:         @selected;
}
element.alternate {
	text-color:               @foreground;
	background-color:         @background;
}

element-icon {
	size:                     24px;
	background-color:         inherit;
}

element-text {
	text-color:               inherit;
	background-color:         inherit;
}
