// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // I use Vim btw.
  "vim_mode": true,
  "cursor_shape": "bar",
  "cursor_blink": false,
  "relative_line_numbers": true,

  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "ui_font_size": 18,
  // Set font features for buffers.
  "buffer_font_family": "Comic Code",
  "buffer_font_fallbacks": ["LXGW WenKai Mono", "FiraMono Nerd Font Mono"],
  "buffer_font_size": 18,
  "buffer_line_height": "standard",
  // Set colorscheme.
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  "terminal": {
    "font_family": "Comic Code",
    "font_size": 18,
    "line_height": "standard"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Language Settings
  "languages": {
    "Rust": {
      "format_on_save": "off"
    }
  }
}
