# Ghostty Configuration (Handmade by @johnsmith0x3f)
# Reference = https://ghostty.org/docs/config/reference

font-family = "Maple Mono NFMono CN"
font-feature = "-calt, +cv01, +cv02"
font-size = 15

# Set the colorscheme.
theme = "tokyonight-storm"

# Window {{{

# Set window shape.
window-width = 80
window-height = 24
# Disable window decorations.
window-decoration = "none"
# Add padding areas to the window.
window-padding-x = 36
window-padding-y = 36
window-padding-balance = true
window-padding-color = "background"

# }}}

# Keybinds {{{

# Remove all the default keybinds.
keybind = "clear"

# Reload ghostty config.
keybind = "alt+ctrl+r=reload_config"

# Open a new split.
keybind = "alt+s=new_split:auto"
# Navigate between splits.
keybind = "alt+a=goto_split:previous"
keybind = "alt+d=goto_split:next"

# Spawn a new tab.
keybind = "alt+t=new_tab"
## Hop between tabs.
#keybind = "alt+1=goto_tab:1"
#keybind = "alt+2=goto_tab:2"
#keybind = "alt+3=goto_tab:3"
#keybind = "alt+4=goto_tab:4"
#keybind = "alt+5=goto_tab:5"
#keybind = "alt+6=goto_tab:6"
#keybind = "alt+7=goto_tab:7"
#keybind = "alt+8=goto_tab:8"
#keybind = "alt+9=goto_tab:9"
# Go to adjacent tabs.
keybind = "alt+j=next_tab"
keybind = "alt+k=previous_tab"
keybind = "alt+l=last_tab"
# Move tabs.
keybind = "alt+shift+j=move_tab:+1"
keybind = "alt+shift+k=move_tab:-1"

# Copy & Paste text.
keybind = "ctrl+shift+c=copy_to_clipboard"
keybind = "ctrl+shift+v=paste_from_clipboard"

# }}}

# vim:ft=ghostty
