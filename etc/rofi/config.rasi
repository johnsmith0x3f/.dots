// Rofi v1.7.5

configuration {
	modes:                 [ "drun" , "run", "window" ];
	font:                  "Roboto Mono 12";
	display-drun:          "󱓞 App";
	display-run:           "󰞷 Run";
	display-window:        "󱂬 Win";
	show-icons:            true;
}

// Override default theme.
@theme "/dev/null"

* {
	background:            #101010;
	background-alt:        #2C2C2C;
	foreground:            #FFFFFF;
	foreground-alt:        #5B5B5B;

	border-radius:         6px;
	background-color:      inherit;
	text-color:            inherit;
	spacing:               8px;
}

window {
	width:                 420px;
	background-color:      @background;
	text-color:            @foreground;
}

mainbox {
	padding:               12px;
	children:              [ "inputbar", "listview" ];
}

inputbar {
	padding:               60px 12px;
	background-image:      url("assets/dotdeer.png", width);
	children:              [ "prompt", "entry" ];
}

prompt {
	padding:               6px 12px;
	background-color:      @background-alt;
}

entry {
	padding:               6px 12px;
	cursor:                text;
}

listview {
	padding:               6px 0;
	lines:                 8;
} // children: [ "element", ..., "element" ];

element {
	padding:               6px;
	cursor:                pointer;
}
element.selected {
	background-color:      @background-alt;
} // children: [ "element-icon", "element-text" ];
