// Rofi v1.7.5

configuration {
	modes:                 [ "drun" , "run", "window" ];
	font:                  "Roboto Mono 12";
	display-drun:          "󱓞 App";
	display-run:           "󰞷 Run";
	display-window:        "󱂬 Win";
	show-icons:            true;
}

* {
	background:            #101010;
	background-alt:        #2C2C2C;
	foreground:            #FFFFFF;
	foreground-alt:        #5B5B5B;

	background-color:      inherit;
	text-color:            inherit;
}

window {
	width:                 420px;
	background-color:      @background;
	text-color:            @foreground;
}

mainbox {
	padding:               12px;
	children:              [ "inputbar", "listview" ];
}

inputbar {
	border-radius:         12px;
	padding:               60px 12px;
	background-image:      url("~/.local/share/wallpapers/dotdeer.png", width);
	children:              [ "prompt", "entry" ];
}

prompt {
	border-radius:         6px;
	padding:               6px 18px;
	background-color:      @background-alt;
}

entry {
	padding:               6px 18px;
	placeholder:           "Search";
	placeholder-color:     @foreground-alt;
	cursor:                text;
}

listview {
	padding:               6px 0;
	spacing:               6px;
} // children: [ "element", ..., "element" ];

element {
	spacing:               8px;
	padding:               6px;
	border-radius:         6px;
	cursor:                pointer;
}
element.selected {
	background-color:      @background-alt;
} // children: [ "element-icon", "element-text" ];

element-icon {
	size:                  16px;
}
