#!/bin/sh

# Exit i3.
i3_exit() {
	i3-msg "exit"
}

# [rest]art (reload) i3.
i3_rest() {
	i3-msg "restart"
}

# Lock session.
i3_lock() {
	slock
}

# Take screenshot.
i3_shot() {
	scrot
}

# Start terminal emulator.
i3_term() {
	if command -v st &> /dev/null; then
		st
		return 0
	fi

	kitty --hold "sh -c $2"
}

# Init i3 (commands to run on startup).
i3_init() {
	echo "TODO"
}

# [rock]et, the common icon for app launcher.
i3_rock() {
	if command -v rofi &> /dev/null; then
		rofi -show
		return 0
	fi

	if command -v dmenu &> /dev/null; then
		dmenu_run -b
		return 0
	fi
}

# Start taskbar.
i3_task() {
	if command -v tint2 &> "/dev/null"; then
		tint2
		return 0
	fi

	if command -v polybar &> "/dev/null"; then
		pgrep -x "polybar" &> "/dev/null" || polybar --reload "main"
		return 0
	fi

	return 1
}

# Draw wallpaper.
i3_wall() {
	local wallpaper="${XDG_DATA_HOME}/wallpapers/jellynaut.png"

	if command -v nitrogen &> "/dev/null"; then
		nitrogen --set-auto "$wallpaper"
		return 0
	fi

	if command -v feh &> "/dev/null"; then
		feh --bg-fill --no-fehbg "$wallpaper"
		return 0
	fi

	return 1
}

case $1 in
	exit) fun=i3_exit ;;
	rest) fun=i3_rest ;;
	lock) fun=i3_lock ;;
	shot) fun=i3_shot ;;
	term) fun=i3_term ;;
	rock) fun=i3_rock ;;
	init) fun=i3_init ;;
	wall) fun=i3_wall ;;
	comp) fun=i3_comp ;;
esac

$fun "${@:2}"
