#!/bin/bash

setvol() {
	if [[ "$1" == "-" ]]; then
		wpctl set-volume "@DEFAULT_AUDIO_SINK@" "$2-" || pactl set-sink-volume "@DEFAULT_SINK@" "-$2"
	else
		wpctl set-volume "@DEFAULT_AUDIO_SINK@" "$2+" || pactl set-sink-volume "@DEFAULT_SINK@" "+$2"
	fi
}

toggle() {
	wpctl set-mute "@DEFAULT_AUDIO_SINK@" toggle || pactl set-sink-mute "@DEFAULT_SINK@" toggle
}

case $1 in
	decrease) setvol - "$2" ;;
	increase) setvol + "$2" ;;
	toggle) toggle ;;
esac
